<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_weight="0.33"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#283350"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/card_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:padding="4dp"
            android:text="Card Type"
            android:textAlignment="textStart"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:text="Card number"
            android:textColor="#ffb500"
            android:textSize="24dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/CVV2_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:padding="4dp"
                android:text="CVV2: "
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_cvv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Card cvv"
                android:textColor="#ffb500"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/expiration_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:padding="4dp"
                android:text="EXPIRES: "
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_expire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Card expire"
                android:textAlignment="textStart"
                android:textColor="#ffb500"
                android:textSize="24dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/card_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Card owner"
            android:textColor="#ffb500"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/account_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="2dp"
            android:text="Account number"
            android:textColor="#ffb500"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/account_number_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACCOUNT NUMBER"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/iban_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="2dp"
            android:text="Card IBAN"
            android:textColor="#ffb500"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/iban_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IBAN"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>